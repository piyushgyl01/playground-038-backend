# MongoDB Connection String
# Replace with your MongoDB Atlas or local MongoDB connection string
MONGODB=mongodb+srv://username:password@cluster.example.mongodb.net/?retryWrites=true&w=majority&appName=yourAppName

# JSON Web Token Secret
# Generate a strong random string for production (you can use: require('crypto').randomBytes(64).toString('hex'))
JWT_SECRET=your_jwt_secret_key_here

# Refresh Token Secret 
# Should be different from JWT_SECRET in production for enhanced security
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Node Environment
# Options: development, production, test
NODE_ENV=development